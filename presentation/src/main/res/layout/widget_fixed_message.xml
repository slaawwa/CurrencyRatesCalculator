<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_dark"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/tiny"
    android:paddingEnd="0dp"
    android:paddingStart="@dimen/normal"
    android:paddingTop="@dimen/tiny">

    <TextView
        android:id="@+id/text_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:minLines="2"
        android:textAppearance="@style/Rates.TextAppearance.Regular"
        android:textColor="@color/white"
        tools:text="@string/error_network_no_internet_connection" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/large"
            android:layout_height="@dimen/large"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/tiny"
            android:paddingTop="@dimen/tiny" />

        <Button
            android:id="@+id/button_action"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_retry"
            android:textAllCaps="true"
            android:textAppearance="@style/Rates.TextAppearance.Regular.Bold"
            android:textColor="@color/yellow" />

    </FrameLayout>

</LinearLayout>